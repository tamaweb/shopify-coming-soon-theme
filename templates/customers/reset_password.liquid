{{ 'customers.css' | asset_url | stylesheet_tag }}

<div class="wt-customer">
  <div class="wt-customer__form--container">
    <svg style="display: none">
      <symbol id="icon-error" viewBox="0 0 13 13">
        <circle cx="6.5" cy="6.50049" r="5.5" stroke="white" stroke-width="2"/>
        <circle cx="6.5" cy="6.5" r="5.5" fill="#EB001B" stroke="#EB001B" stroke-width="0.7"/>
        <path d="M5.87413 3.52832L5.97439 7.57216H7.02713L7.12739 3.52832H5.87413ZM6.50076 9.66091C6.88091 9.66091 7.18169 9.37267 7.18169 9.00504C7.18169 8.63742 6.88091 8.34917 6.50076 8.34917C6.12061 8.34917 5.81982 8.63742 5.81982 9.00504C5.81982 9.37267 6.12061 9.66091 6.50076 9.66091Z" fill="white"/>
        <path d="M5.87413 3.17832H5.51535L5.52424 3.537L5.6245 7.58083L5.63296 7.92216H5.97439H7.02713H7.36856L7.37702 7.58083L7.47728 3.537L7.48617 3.17832H7.12739H5.87413ZM6.50076 10.0109C7.06121 10.0109 7.5317 9.57872 7.5317 9.00504C7.5317 8.43137 7.06121 7.99918 6.50076 7.99918C5.94031 7.99918 5.46982 8.43137 5.46982 9.00504C5.46982 9.57872 5.94031 10.0109 6.50076 10.0109Z" fill="white" stroke="#EB001B" stroke-width="0.7">
      </symbol>
    </svg>
    <h2 class="hero__title">
      {{ 'customer.reset_password.title' | t }}
    </h2>
    <p class="wt-customer__text">
      {{ 'customer.reset_password.subtext' | t: email: email }}
    </p>
    {%- form 'reset_customer_password' -%}
      {%- if form.errors -%}
        {% comment %}<h2 class="form__message" tabindex="-1" autofocus>{% endcomment %}
        {% comment %}<span class="visually-hidden">{{ 'accessibility.error' | t }} </span>{% endcomment %}
        {% comment %}{{ 'templates.contact.form.error_heading' | t }}{% endcomment %}
        {% comment %}<svg aria-hidden="true" focusable="false" role="presentation">{% endcomment %}
        {% comment %}<use href="#icon-error" />{% endcomment %}
        {% comment %}</svg>{% endcomment %}
        {% comment %}</h2>{% endcomment %}
        <div class="form__error-field">
          {{ form.errors | default_errors }}
        </div>

        {% comment %}<ul>{% endcomment %}
        {% comment %}{%- for field in form.errors -%}{% endcomment %}
        {% comment %}<li>{% endcomment %}
        {% comment %}{%- if field == 'form' -%}{% endcomment %}
        {% comment %}{{ form.errors.messages[field] }}{% endcomment %}
        {% comment %}{%- else -%}{% endcomment %}
        {% comment %}<a href="#{{ field }}">{% endcomment %}
        {% comment %}{{ form.errors.translated_fields[field] | capitalize }}{% endcomment %}
        {% comment %}{{ form.errors.messages[field] }}{% endcomment %}
        {% comment %}</a>{% endcomment %}
        {% comment %}{%- endif -%}{% endcomment %}
        {% comment %}</li>{% endcomment %}
        {% comment %}{%- endfor -%}{% endcomment %}
        {% comment %}</ul>{% endcomment %}
      {%- endif -%}

      <label class="form__field wt-customer__form--input-first" for="password">
        <input
          type="password"
          name="customer[password]"
          id="password"
          class="form__field__input"
          autocomplete="new-password"
          {% if form.errors contains 'password' %}
            aria-invalid="true"
            aria-describedby="password-error"
          {% endif %}
          placeholder=" "
        >
        <span class="form__field__label"> Password </span>
        {%- if form.errors contains 'password' -%}
          <small id="password-error" class="form__message">
            {{ form.errors.translated_fields.password | capitalize }}
            {{ form.errors.messages.password }}
          </small>
        {%- endif -%}
      </label>

      <label class="form__field form__field--email" for="password_confirmation">
        <input
          type="password"
          name="customer[password_confirmation]"
          id="password_confirmation"
          class="form__field__input"
          autocomplete="new-password"
          {% if form.errors contains 'password_confirmation' %}
            aria-invalid="true"
            aria-describedby="password_confirmation-error"
          {% endif %}
          placeholder=" "
        >
        <span class="form__field__label"> Confirm Password </span>
        {%- if form.errors contains 'password_confirmation' -%}
          <small id="password_confirmation-error" class="form__message">
            <svg aria-hidden="true" focusable="false" role="presentation">
              <use href="#icon-error" />
            </svg>
            {{ form.errors.translated_fields.password_confirmation | capitalize }}
            {{ form.errors.messages.password_confirmation }}
          </small>
        {%- endif -%}
      </label>

      <button
        aria-label="{{ 'customer.reset_password.submit' | t }}"
        class="form__send__button"
      >
        {{ 'customer.reset_password.submit' | t }}
      </button>
    {%- endform -%}
  </div>
</div>
