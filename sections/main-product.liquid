    <section class="wt-product__main rte">
      <div class="wt-product__info">
        {%- assign product_form_id = 'product-form-' | append: section.id -%}

        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when '@app' -%}
              {% render block %}
            {%- when 'custom_liquid' -%}
              {{ block.settings.custom_liquid }}
            {%- when 'title' -%}
              <div
                data-block-id="{{ block.id }}"
