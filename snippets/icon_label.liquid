{%- assign item_downcase = value | downcase -%}
{%- for icon_item in icons_config -%}
  {%- assign icon_item_parts = icon_item | split: ':' -%}
  {%- assign icon_item_name = icon_item_parts.first | downcase | strip -%}
  {%- if item_downcase == icon_item_name -%}
    {%- assign icon_item_value = icon_item_parts.last | strip -%}

    {%- if images[icon_item_value] != blank -%}
      {%- assign icon_item_image = images[icon_item_value] | image_url: width: 80, height: 80 -%}
    {%- endif -%}

    {%- break -%}
  {%- endif -%}
{%- endfor -%}
<img src="{{ icon_item_image }}" width="80px" height="80px" loading="lazy" alt="Icon Item">
