<ul class="social-links">
  {% if settings.social_facebook_link != empty %}
    <li class="social-links__item">
      <a
        href="{{ settings.social_facebook_link }}"
        class="social-link"
        aria-label="Facebook"
        target="_blank"
        rel="nofollow"
      >
        {% render 'icons', id: 'soc-fb' %}
